{
  "name": "@jesushr0013/native-timer",
  "version": "8.0.7",
  "description": "Plugin nativo para timer con foreground service",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/",
    "dist/",
    "ios/",
    "Jesushr0013NativeTimer.podspec",
    "NativeTimerKit.podspec"
  ],
  "author": "Meycagesal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jesherram/native-timer"
  },
  "bugs": {
    "url": "https://github.com/jesherram/native-timer/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "timer",
    "android",
    "foreground-service"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^8.0.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "prettier": "~3.4.2",
    "prettier-plugin-java": "~1.0.2",
    "rimraf": "^6.0.1",
    "rollup": "^2.79.2",
    "swiftlint": "^1.0.1",
    "typescript": "~4.1.5"
  },
  "peerDependencies": {
    "@capacitor/core": ">=8.0.0"
  },
  "capacitor": {
    "android": {
      "src": "android"
    },
    "ios": {
      "src": "ios",
      "spm": true
    }
  }
}
